/* pages/index/details.wxss */
page{
  color:#333;
  background:#f2f7fc;
}
.top_con,.center_con{
  background:#fff;
  width:100%;
  padding-bottom:10rpx;
  margin-top:20rpx;
}
.top_con{
  margin-top:0;
}
.center_con{
  margin-bottom:100rpx;
}
.swiper {
  height: 600rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 2rpx;
}
swiper .wx-swiper-dot{
  width:8px;
  display: inline-flex;
  height:8px; 
  margin-left:7rpx;
  justify-content:space-between;
  background:#fff;
  opacity:0.4;
}

swiper .wx-swiper-dot-active{
  width:20px;
  height:8px;
  border-radius:20px;
  opacity:1;
}
.name,.price{
  width:100%;
  padding:0 30rpx;
  box-sizing:border-box;
  text-align: left;  
  line-height:70rpx;
  height:70rpx;
}
.top_con .name{
  display:block;
  margin-top:10rpx;
  font-size:34rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  -webkit-line-clamp:1;
}
.price .nowprice{
  float:left;
  font-weight:bold;
  font-size:44rpx;
  color:#ff3a3a;
  line-height:60rpx;
}
.price .yuanprice{
  font-size:24rpx;
  color:#aaaaaa;
  float:left;
  margin-left:30rpx;
  line-height:65rpx;
}
.price .yuanprice text{
  text-decoration:line-through;
}
.price .people{
  color:#aaaaaa;
  font-size:24rpx;
  float:right;
  line-height:60rpx;
}
.center_con{
  padding-top:10rpx;
  font-size:28rpx;
}
.nav{
  flex: none;
  display: flex;
  font-size:30rpx;
  color:#aaa;
  padding:0 100rpx;
  height:73rpx;
  border-bottom:2rpx solid #f2f7fc;
  padding-top:20rpx;
  margin-bottom:30rpx;
  position:relative;
}
.nav text{
  position: relative;
  float:left;
  display:block;
}
.nav text:last-child{
  float:right;
  margin-left:210rpx;
}
.nav .active{
  color:#ffcc00;
  font-weight:bold;
}
.nav .active:after{
  content:'';
  width:118rpx;
  height:4rpx;
  background:#ffcc00;
  border-radius:10rpx;
  bottom:20rpx;
  position:absolute;
  left:0;
}
.show{display:block;}
.hidden{display:none;}
.day{
  position:relative;
  padding-bottom:30rpx;
}
.day>image{
  position:absolute;
  top:30rpx;
  width:2rpx;
  height:100%;
  left:50rpx;
  padding-top:0rpx;
  box-sizing:border-box;
}
.day_time,.day>text{
  padding:0 30rpx 0 100rpx;
  display:block;
}
.day>text{
  padding-top:20rpx;
  line-height:45rpx;
}
.day_time{
  background:url("data:image/png;base64,") no-repeat 40rpx 23rpx;
  background-size:22rpx 22rpx;
}
.day_time>text{
  font-size:34rpx;
  font-weight:bold;
  line-height:65rpx;
}
.day_time .btn{
  width:400rpx;
  float:right;
}
.day_time .btn button{
  float:left;
  width:180rpx;
  height:65rpx;
  line-height:65rpx;
  font-size:28rpx;
  color:#fff;
  margin-left:20rpx;
  background:-webkit-linear-gradient(left, #ffdb17 , #ffcb14); /* Safari 5.1 - 6.0 */
  border-radius:20rpx;
}
.day_time .btn button.spots{
   background:-webkit-linear-gradient(left, #9bcbff , #5caaff); /* Safari 5.1 - 6.0 */
}
.center_con .day:last-child>image{
  height:90%;
}
.item_con{
  width:100%;
}
.bottom_con{
  height:100rpx;
  width:100%;
  background:#fff;
  box-shadow:6rpx 0 10rpx rgba(117,117,117,0.2);
  position:fixed;
  bottom:0;
  left:0;
  font-size:22rpx;
  display:flex;
}
.bottom_con view,.bottom_con button{
   display: flex;
    flex-direction: column;
    flex:1;
    align-items: center;
    justify-content: center;
    outline: 0;-webkit-text-size-adjust: 100%;
}
.bottom_con view image{
  display:block;
  width:42rpx;
  height:42rpx;
  margin-bottom:5rpx;
}
.bottom_con view:first-child{
  position:relative;
}
.bottom_con view:first-child:after{
  content:'';
  position:absolute;
  width:1px;
  height:48rpx;
  background:#ddd;
  right:0;
  top:26rpx;
}
.bottom_con button{
  flex:1.5;
  background:-webkit-linear-gradient(left, #ffdb17 , #ffcb14); /* Safari 5.1 - 6.0 */
  border-radius:0;
  color:#fff;
  font-size:30rpx;
}

