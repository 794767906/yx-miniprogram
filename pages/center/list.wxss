/* pages/center/list.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background:#f2f7fc;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size:28rpx;
  box-shadow:6px 0px 13px rgba(117,117,117,0.1);
  margin-bottom:26rpx;

}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  margin:0 20rpx;
}
.navbar .item.active{
  color: #ffcc00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #ffcc00;
  border-radius:10rpx;
}
.item_con{
  width:690rpx;
  margin:0 auto;
}
.item_con .list{
  height:470rpx;
  background:#fff;
  border-radius:30rpx;
   box-shadow:0px 0px 20px rgba(170,187,205,0.1);
   padding:0 20px 20px;

}
.list .state{
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  font-weight:bold;
}
.list .state text{
  font-size:28rpx;
  color:#ff3a3a;
  float:right;
}
.info image{
  width:200rpx;
  height:200rpx;
  border-radius:20rpx;
  float:left;
}
.info text{
  display:block;
  float:left;
  width:390rpx;
  margin-left:20rpx;
  font-size:30rpx;
}