/* pages/center/list.wxss */
page{
  display: flex;
  flex-direction: column;
  background:#f2f7fc;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size:28rpx;
  box-shadow:6px 0px 13px rgba(117,117,117,0.1);
  margin-bottom:26rpx;
  position:fixed;
  top:0;
  left:0;
  z-index:2;
  width:100%;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  margin:0 20rpx;
  color:#333;
}
.navbar .item text{
  position:absolute;
  top:18rpx;
  right:-10rpx;
  background:#ff3a3a;
  width:16rpx;
  height:16rpx;
  border-radius:50%;
}
.navbar .item.active{
  color: #ffcc00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #ffcc00;
  border-radius:10rpx;
}
.item_con{
  width:690rpx;
  margin:0 auto;
  overflow:hidden;
  margin-top:100rpx;
}
.item_con .list{
  background:#fff;
  border-radius:30rpx;
   box-shadow:0px 0px 20px rgba(170,187,205,0.1);
   padding:0 20px 10px;
  overflow:hidden;
  margin-bottom:20rpx;
}
.list .state{
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  font-weight:bold;
}
.list .state text{
  font-size:28rpx;
  color:#ff3a3a;
  float:right;
}
.paid .state text,.refunded .state text{
  color:#bbbbbb;
}
.info{
  overflow:hidden;
}
.info image{
  width:200rpx;
  height:200rpx;
  border-radius:20rpx;
  float:left;
}
.info text{
  display:block;
  float:left;
  width:390rpx;
  margin-left:20rpx;
  font-size:30rpx;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  line-height:40rpx;
  margin-top:10rpx;
  height:80rpx;
}
.info text.xinxi{
  color:#9b9a9a;
  font-size:26rpx;
  margin-top:15rpx;
}
.list .price{
  font-size:30rpx;
 width:100%;
 text-align:right;
  height:50rpx;
  line-height:50rpx;
  display:block;
}
.list .btn{
  height:60rpx;
  float:right;
  margin-top:20rpx;
}
.list .btn button{
  width:180rpx;
  height:60rpx;
  border:2rpx solid #dddddd;
  border-radius:10rpx;
  float:left;
  font-size:28rpx;
  color:#333;
  line-height:60rpx;
  margin-left:30rpx;

}