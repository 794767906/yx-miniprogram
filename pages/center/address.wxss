/**index.wxss**/

page{
  background:#f2f7fc;
}
.wu{
  line-height:100rpx;
  display:block;
  text-align:center;
  font-size:28rpx;
  color:#333;
  margin-top:50rpx;
}
.container{
  padding-bottom:135rpx;
}
.msg-item {
  left:0;
  top:0;
  width:100%;
  margin:0 auto;
  background:#fff;
  box-shadow:0px 0px 20px rgba(170,187,205,0.1);
  overflow:hidden;
  box-sizing:border-box;
  position:relative;
  margin-bottom:20rpx;
  height: 170rpx;
  line-height: 170rpx;
}
.msg-item .user{
  font-size:34rpx;
  height:80rpx;
  line-height:90rpx;

}
.msg-item .user text{
  margin-left:20rpx;
}
.msg-item .place,.msg-item .user{
  display:block;
  padding:0 40rpx;
}
.msg-item .place{
  font-size:26rpx;
  color:#bbb;
  line-height:40rpx;
}
.msg-item .place text{
  display:block;

}
.msg-item view>image{
  width:44rpx;
  height:35rpx;
  position:absolute;
  right:40rpx;
  top:50%;
  margin-top:-17.5rpx;
}
.msg {
  position: absolute;
  width: 100%;
  height: 170rpx;
  left:0;
  top:0;
  z-index: 9;
  background-color: #FFF;
}


.msg-menu {
  position: absolute;
  width: 100%;
  height: 170rpx;
  left:0;
  top:0;
  z-index: 0;
}

.menu-delete {
  position: absolute;
  width: 210rpx;
  height: 170rpx;
  top:0rpx;
  right: 0;
  background-color: rgb(255, 58, 50);
  color:#FFF;
  text-align: center;
  line-height:168rpx;
   font-size:30rpx;
}

.menu-mark {
  position: absolute;
  width: 210rpx;
  height:170rpx;
  top:0rpx;
  right: 210rpx;
  background-color: rgb(200, 199, 205);
  color:#FFF;
  text-align:center;
  line-height:168rpx;
  font-size:30rpx;
}
.add{
  position:fixed;
  bottom:0;
  left:0;
  height:135rpx;
  background:#f2f7fc;
  width:100%;
  z-index:10;
}
.add>button{
  width:670rpx;
  height:85rpx;
  line-height:85rpx;
  background:-webkit-linear-gradient(left, #ff3a3a , #ff6917);
  border-radius:40rpx;
  color:#fff;
  font-size:32rpx;
  box-shadow:0px 0px 20px #f7baa6;  
  margin:25rpx auto;
  display:block;
}