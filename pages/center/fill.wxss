/* pages/center/fill.wxss */
page{
  background:#f2f7fc;
}
.container{

}
.province,.dec{
  width:100%;
  font-size:30rpx;
  margin-top:10rpx;
}
.province>view,.dec>view{
  background:#fff;
  width:100%;
  height:90rpx;
  line-height:90rpx;
  margin-bottom:1rpx;
  padding:0 30rpx;
  box-sizing:border-box;
}
.province>view text,.dec>view text{
  font-weight:bold;
}
.province>view picker{
  width:500rpx;
  float:right;
  text-align:right;
  height:90rpx;
  line-height:90rpx;
  display:block;
}
.province>view picker text,.dec>view input{
    width:500rpx;
    text-align:right;
    height:90rpx;
    line-height:90rpx;
    display:block;
    font-weight:normal;
}
button{
  width:670rpx;
  height:85rpx;
  line-height:85rpx;
  background:-webkit-linear-gradient(left, #ffdb17 , #ffc514);
  border-radius:40rpx;
  color:#fff;
  font-size:32rpx;
  box-shadow:0px 5px 20px #f8e89a;  
  display:block;
  position:fixed;
  bottom:40rpx;
}
.button-hover{
  color:#fff;
}
.dec>view input{
  float:right;
}